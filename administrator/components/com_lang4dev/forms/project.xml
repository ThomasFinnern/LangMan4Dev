<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="Finnern\Component\Lang4dev\Administrator\Field">

	<fieldset>
		<field
				name="id"
				type="number"
				label="JGLOBAL_FIELD_ID_LABEL"
				default="0"
				class="readonly"
				readonly="true"
		/>

		<field
				name="title"
				type="text"
				label="COM_LANG4DEV_PROJECT_TITLE"
				size="40"
		/>

		<field
				name="alias"
				type="text"
				label="JFIELD_ALIAS_LABEL"
				size="45"
				description="JFIELD_ALIAS_DESC"
				hint="JFIELD_ALIAS_PLACEHOLDER"
		/>

		<field
				name="name"
				type="text"
				label="COM_LANG4DEV_COMPONENT_NAME"
				description="COM_LANG4DEV_COMPONENT_NAME_DESC"
				size="40"
		/>

		<field
				name="root_path"
				type="text"
				label="COM_LANG4DEV_PRJ_ROOT_PATH"
				description="COM_LANG4DEV_PRJ_ROOT_PATH_DESC"
				class="readonly"
				size="40"
		/>

		<field
				name="root_path"
				type="text"
				label="COM_LANG4DEV_PRJ_ROOT_PATH"
				description="COM_LANG4DEV_PRJ_ROOT_PATH_DESC"
				class="readonly"
				size="40"
		/>

		<field
				name="twin_id"
				type="text"
				label="COM_LANG4DEV_PROJECT_ORIGIN_TWIN_ID"
				description="COM_LANG4DEV_PROJECT_ORIGIN_TWIN_ID_DESC"
				default="0"
				class="readonly"
		/>


		<field
				name="notes"
				type="textarea"
				label="COM_LANG4DEV_PROJECT_NOTES"
				description="COM_LANG4DEV_PROJECT_NOTES_DESC"
				size="40"
				maxlength="255"
		/>

		<field
				name="extension"
				type="hidden"
		/>

		<field
				name="ordering"
				type="integer"
				filter="unset"
		/>

		<field
				name="created"
				type="calendar"
				label="JGLOBAL_CREATED_DATE"
				translateformat="true"
				showtime="true"
				size="22"
				filter="user_utc"
		/>

		<field
				name="created_by"
				type="user"
				label="JGLOBAL_FIELD_CREATED_BY_LABEL"
		/>

		<field
				name="created_by_alias"
				type="text"
				label="COM_LANG4DEV_CREATED_BY_ALIAS_LABEL"
				size="20"
		/>

		<field
				name="modified"
				type="calendar"
				label="JGLOBAL_FIELD_MODIFIED_LABEL"
				class="form-control"
				translateformat="true"
				showtime="true"
				size="22"
				readonly="true"
				filter="user_utc"
		/>

		<field
				name="modified_by"
				type="user"
				label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
				class="readonly"
				readonly="true"
				filter="unset"
		/>

		<field
				name="checked_out"
				type="hidden"
				filter="unset"
		/>

		<field
				name="checked_out_time"
				type="hidden"
				filter="unset"
		/>

		<field
				name="access"
				type="accesslevel"
				label="JFIELD_ACCESS_LABEL"
				size="1"
		/>
	</fieldset>

	<fields name="params"
	        label="COM_LANG4DEV_FIELD_BASIC_LABEL">

		<fieldset name="basic">

			<field
					name="test01"
					type="componentlayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					class="custom-select"
					view="image"
					extension="com_lang4dev"
					useglobal="true"
			/>

			<!--field
					name="test02"
					type="media"
					label="COM_LANG4DEV_FIELD_IMAGE_LABEL"
			/-->

		</fieldset>
	</fields>

	<fields name="metadata"
	        label="JGLOBAL_FIELDSET_METADATA_OPTIONS">

		<fieldset name="jmetadata"
		          label="JGLOBAL_FIELDSET_METADATA_OPTIONS">

			<field
					name="author"
					type="text"
					label="JAUTHOR"
					size="30"
			/>

			<field
					name="robots"
					type="list"
					label="JFIELD_METADATA_ROBOTS_LABEL"
			>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="index, follow">JGLOBAL_INDEX_FOLLOW</option>
				<option value="noindex, follow">JGLOBAL_NOINDEX_FOLLOW</option>
				<option value="index, nofollow">JGLOBAL_INDEX_NOFOLLOW</option>
				<option value="noindex, nofollow">JGLOBAL_NOINDEX_NOFOLLOW</option>
			</field>
		</fieldset>
	</fields>


</form>